<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".views.activities.DetailActivity">

    <ImageView
        android:id="@+id/iconImageView"
        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="60dp" />


    <TextView
        android:id="@+id/titleTextView"
        android:textSize="32sp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iconImageView"
        android:text="CLEAR"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/descTextView"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iconImageView"
        android:text="CLEAR"
        android:layout_below="@+id/titleTextView"
        android:textColor="@color/secondaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tempTextView"
        android:textSize="32sp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:text="33 C"
        android:textColor="@color/primaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        app:cardElevation="4dp"
        android:layout_below="@+id/descTextView"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Minimum Temp:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/minTempTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <View
                android:layout_marginBottom="8dp"
                android:background="@color/secondaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Maximum Temp:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/maxTempTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginBottom="8dp"
                android:background="@color/secondaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Humidity:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/humidityTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginBottom="8dp"
                android:background="@color/secondaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Air Pressure:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/airTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <View
                android:layout_marginBottom="8dp"
                android:background="@color/secondaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="2"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Wind Speed:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/windTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginBottom="8dp"
                android:background="@color/secondaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="Clouds Percentage:"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cloudsTextView"
                    android:textSize="18sp"
                    android:text="CLEAR"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>